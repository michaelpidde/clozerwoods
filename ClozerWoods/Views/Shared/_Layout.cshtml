@using ClozerWoods.Models.MainGate
@model SharedViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClozerWoods</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClozerWoods.styles.css" asp-append-version="true" />
</head>
<body>
    @if(Model.PublishedPages != null && Model.PublishedPages.Any()) {
        <header>
            <nav>
                <ul>
                    <li><a asp-area="" asp-controller="MainGate" asp-action="Index">Home</a></li>
                    @foreach(var p in Model.PublishedPages!) {
                        <li><a asp-area="" asp-controller="MainGate" asp-action="Page">@p.Title</a></li>
                    }
                    <li>|</li>
                    <li><a asp-area="" asp-controller="SubGate" asp-action="Dashboard">Dashboard</a></li>
                </ul>
            </nav>
        </header>
    }

    <main>
        @RenderBody()
        <div class="clear"></div>
    </main>

    <footer>
        &copy; 2022 - Clozer Woods
    </footer>

    @RenderSection("scripts", false)
</body>
</html>

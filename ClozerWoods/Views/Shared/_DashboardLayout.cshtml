@{
    Layout = "_Layout.cshtml";
}

<h1>Clozer Woods Main Gate - @ViewData["Title"]</h1>
<aside class="rounded">
    <ul>
        <li><a asp-area="" asp-controller="MainGate" asp-action="EditPage">Pages</a></li>
        <li><a asp-area="" asp-controller="MainGate" asp-action="EditGallery">Galleries</a></li>
        <li><a asp-area="" asp-controller="MainGate" asp-action="EditMediaItems">Media Items</a></li>

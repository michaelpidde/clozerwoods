@using ClozerWoods.Models.ViewModels.MainGate
@model GalleryViewModel
@{
    Layout = "../Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Edit Gallery";
}

<form method="post" asp-controller="MainGate" asp-action="EditGallery">
    <label for="title">Title</label>
    <input type="text" name="title" value="@Model.SelectedGallery!.Title" />
    <input type="submit" name="submit" value="Save" /> 
</form>
